<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:elevation="5dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/dialog_background"
        android:gravity="center">

        <!-- Image for Success or Failure -->
        <ImageView
            android:id="@+id/paymentStatusImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="15dp"
            android:contentDescription="Payment Status Image"
            android:layout_gravity="center" />

        <!-- Title of the Dialog -->
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Status"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <!-- Transaction ID -->
        <TextView
            android:id="@+id/dialogTransactionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction ID: N/A"
            android:textSize="16sp"
            android:textColor="@color/gray_dark"
            android:gravity="center"
            android:layout_marginBottom="5dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/dialogDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: Money Add Failed or Money Added To Wallet"
            android:textSize="16sp"
            android:textColor="@color/gray_dark"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- OK Button -->
        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="@color/white"
            android:padding="10dp"
            android:backgroundTint="@color/wallet_primary_text_holo_light"
            android:layout_gravity="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
